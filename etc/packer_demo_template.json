{
  "variables": {
    "aws_access_key": "", 
    "aws_secret_key": "", 
    "base_name": "", 
    "description": "", 
    "dockerfile_dir": "" 
  },
  "builders": [{
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-875260ee",
    "instance_type": "m1.small",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "account_id": "7923-7984-4846",
    "s3_bucket": "anki-ami-east",
    "x509_cert_path": "/vagrant/.aws/credentials/ben@anki/cert.pem",
    "x509_key_path": "/vagrant/.aws/credentials/ben@anki/pk.pem",
    "x509_upload_path": "/tmp",
    "ami_description": "{{user `description`}}",
    "ami_name": "{{user `description`}}",
    "bundle_destination": "/mnt"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "sudo chown ubuntu /mnt" ]
    },
    {
      "type": "file",
      "source": "{{user `dockerfile_dir`}}",
      "destination": "/mnt"
    },
    {
      "type": "shell",
      "start_retry_timeout": "10m",
      "inline": [
        "cd /mnt && sudo docker build -rm=true -t='{{user `base_name`}}' .",
        "sudo reboot",
        "sleep 60"
      ]
    },
    {
      "type": "shell",
      "start_retry_timeout": "10m",
      "inline": [
        "sleep 10"
      ]
    }
  ]
}
